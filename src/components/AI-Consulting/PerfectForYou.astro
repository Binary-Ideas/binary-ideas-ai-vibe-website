---

<section class="relative w-full px-4 py-20 sm:px-8 lg:px-20">
  <div class="mx-auto flex max-w-6xl flex-col gap-8">
    <div class="text-center">
      <h2 class="text-3xl font-semibold leading-tight text-white sm:text-4xl md:text-[50px] md:leading-[58px] [font-family:'Segoe_UI_Symbol-Regular',Helvetica]">
        AI Consulting is <span class="text-transparent bg-clip-text bg-[linear-gradient(90deg,#2b7fff_0%,#ac46ff_50%,#f6329a_100%)]">Perfect For You If...</span>
      </h2>
    </div>

    <div class="flex flex-col gap-6">
      {cards.map((card) => (
        <article class="rounded-[28px] border border-[#ffffff10] bg-[#050915]/85 p-6 shadow-[0_25px_60px_rgba(5,6,14,0.45)] [font-family:'Segoe_UI_Symbol-Regular',Helvetica]">
          <div class="flex items-center gap-4">
            <span
              class="flex h-12 w-12 items-center justify-center rounded-2xl bg-[linear-gradient(135deg,#2b7fff_0%,#ac46ff_50%,#f6329a_100%)]"
              aria-hidden="true"
              set:html={iconMarkup[card.icon] ?? iconMarkup.confused}
            >
            </span>
            </span>
            <h3 class="text-xl font-semibold text-white sm:text-2xl">{card.title}</h3>
          </div>

          <div class="mt-6 grid gap-4 lg:grid-cols-2">
            <div class="rounded-2xl border border-[#ffffff14] bg-[#070f1f] p-5">
              <p class="text-xs font-semibold uppercase tracking-[0.35em] text-[#7ac8ff]">
                Your Situation
              </p>
              <p class="mt-3 text-base leading-relaxed text-[#d3d9e8]">
                {card.situation}
              </p>
            </div>

            <div class="rounded-2xl border border-[#ffffff20] bg-[#07142a] p-5">
              <p class="text-xs font-semibold uppercase tracking-[0.35em] text-[#7ff4e8]">
                How We Help
              </p>
              <p class="mt-3 text-base leading-relaxed text-[#d3f3ed]">
                {card.help}
              </p>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

